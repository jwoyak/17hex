{
    "hosting": {
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "README.md"
      ],
      "rewrites": [
        {
          "source": "/sigil/**",
          "destination": "/sigil/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }